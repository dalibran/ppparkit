<div class="container center-align row">
	<h4>UPDATE</h4>
	<%= simple_form_for park_it, remote: true do |f| %>
	  <%= f.error_notification %>
	  <div class="col s12">
	    <%= f.input :kind, as: :select, collection: ["update", "leave"] %>
	  </div>
	  <div class="col s12">
	    <%= f.input :paid_until, as: :string, :input_html => { :class => 'date_picker' } %>
	  </div>
	  <div class="col s12">
	    <%= f.button :submit, label: "PPPup", class: "waves-effect waves-light btn", id: 'parkit-button' %>
	  </div>
	<% end %>
</div>