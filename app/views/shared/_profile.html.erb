<div class="container center-align" id="profile">
    <%= button_tag class: "back-button" do %>
      <i class="material-icons">forward</i>
    <% end %>
    <% avatar_url = current_user.facebook_picture_url %>
    <% if !avatar_url.nil? %>
      <%= image_tag(avatar_url, class: "avatar-bordered", id: "img-profile") %>
    <% end %>
    <h4><%= current_user.first_name %> <%= current_user.last_name %></h4>
    <h6><%= titles(current_user) %> | <%= current_user.points %> points</h6>
    <hr>
    <h5 id="achievements">Achievements</h5>
    <div class="badges">
      <% badges(current_user).each do |item| %>
        <div class="achievement <%= item %>"></div>
      <% end %>
      <div class="achievement signpost"></div>
    </div>
</div>

