<div id="fullpage">
  <div class="section">
    <div class="container">
      <div class="row">
       <div class="col s12 m7">
          <div id="banner-title">
            <h1>PPParkIt</h1>
            <p>Changing the way you park. Driven by the community.</p>
          </div>
          <div class="button">
            <%= link_to user_facebook_omniauth_authorize_path, class: "btn-large" do %><i class="fa fa-facebook-square"></i>Connect With Facebook
            <% end %>
          </div>
        </div>
        <div class="col m5 hide-on-small-only">
          <div id="banner-picture">
            <%= image_tag 'iphone.png', id:'iphone-pic'%>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="section">
    <div class="container">
